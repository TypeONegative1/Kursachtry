@model IEnumerable<GABENweb.Models.DbPlayer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NickName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SignatureHero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WinRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryRole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoloRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateStars)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignatureHero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinRate)
            </td>
            <td>
                @foreach (var elem in item.PrimaryRole)
                {
                    <p>@Html.DisplayFor(modelItem => elem.Role)</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoloRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RateStars)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
